<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.dzakdzak.mapskotlinfirebase.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_below="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="From" />

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/tvFrom"
        android:layout_margin="10dp"
        android:background="#fff"
        android:gravity="center"
        android:hint="Destination" />
<TextView
    android:id="@+id/txtJarak"
    android:layout_below="@id/tvDestination"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Distance :"/>
    <TextView
        android:id="@+id/tvJarak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJarak"
        android:padding="20dp"
        android:text="Jarak :  35 KM" />
    <TextView
        android:id="@+id/txtHarga"
        android:layout_below="@id/tvJarak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price :"/>
    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHarga"
        android:padding="20dp"
        android:text="Harga : $ 900" />
    <TextView
        android:id="@+id/txtWaktu"
        android:layout_below="@id/tvHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration :"/>
    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWaktu"
        android:maxLines="1"
        android:padding="20dp"
        android:text="Waktu :  Now" />

    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="CHECK IN"
        android:textColor="@android:color/white" />
</RelativeLayout>